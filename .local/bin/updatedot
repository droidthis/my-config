#!/bin/sh

# Dotfile location
# Home directory

zsh=~/.zshrc
xses=~/.xsession
newsboat=~/.newsboat/

cp -f $zsh ~/my-config/
cp -f $xses ~/my-config/
cp -f -r $newsboat ~/my-config/

#####################################

# Dotfile location
# .local directory

bin=~/.local/bin/
apps=~/.local/share/applications/

cp -f -r $bin ~/my-config/.local/
cp -f -r $apps ~/my-config/.local/share/

#####################################

# Dotfile location
# .config directory

alacritty=~/.config/alacritty/
dunst=~/.config/dunst/
gsimplecal=~/.config/gsimplecal/
i3=~/.config/i3/
kitty=~/.config/kitty/
mpv=~/.config/mpv/
neofetch=~/.config/neofetch/
nvim=~/.config/nvim/
rofi=~/.config/rofi/
spicetify=~/.config/spicetify/
vis=~/.config/vis/
ytfzf=~/.config/ytfzf/

blsrc=~/.config/betterlockscreenrc
picom=~/.config/picom.conf
rofimoji=~/.config/rofimoji.rc
starship=~/.config/starship.toml


cp -f -r $alacritty ~/my-config/.config/
cp -f -r $dunst ~/my-config/.config/
cp -f -r $gsimplecal ~/my-config/.config/
cp -f -r $i3 ~/my-config/.config/
cp -f -r $kitty ~/my-config/.config/
cp -f -r $mpv ~/my-config/.config/
cp -f -r $neofetch ~/my-config/.config/
cp -f -r $nvim ~/my-config/.config/
cp -f -r $rofi ~/my-config/.config/
cp -f -r $spicetify ~/my-config/.config/
cp -f -r $vis ~/my-config/.config/
cp -f -r $ytfzf ~/my-config/.config/

cp -f $blsrc ~/my-config/.config/
cp -f $picom ~/my-config/.config/
cp -f $rofimoji ~/my-config/.config/
cp -f $starship ~/my-config/.config/

