#!/bin/sh

#bold="\e[1m"
#reset="\e[0m"

echo Hey "$1"..
JAM=$(date "+%k")

if [ "$JAM" -lt 6 ]
		then
			echo "It's too late, take some sleep!"
	elif [ "$JAM" -lt 9 ]
		then
			echo "You're up early!"
	elif [ "$JAM" -lt 12 ]
		then
			echo "Have a good day ahead!"
	elif [ "$JAM" -lt 17 ]
		then
			echo "Good afternoon!"
	elif [ "$JAM" -lt 20 ]
		then
			echo "Good evening!"
    else
			echo "It's time to wrap up for the day!"
fi
